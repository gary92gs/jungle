<h1>User Login</h1>

<%= form_with(url: login_path, local: true) do |form| %>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <strong><%= flash[:alert] %></strong>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, name: 'session[email]', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, name: 'session[password]', class: 'form-control' %>
  </div>

  <%= form.submit 'Login', class: 'btn btn-primary' %>

<% end %>